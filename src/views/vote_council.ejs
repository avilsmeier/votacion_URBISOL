<%- include('layout', { title: "Votar Directiva", body: `
<style>
  .option-card {
    border: 2px solid #d9d9d9;
    border-radius: 14px;
    padding: 14px 16px;
    margin: 14px 0;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .option-card:hover {
    border-color: #2b7cff;
    background: #f3f8ff;
  }

  .option-card.selected {
    border-color: #2b7cff;
    background: #eaf2ff;
    box-shadow: 0 0 0 3px rgba(43,124,255,0.15);
  }

  .option-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.05em;
    font-weight: 700;
  }

  .check {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 2px solid #bbb;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: white;
    background: transparent;
  }

  .option-card.selected .check {
    background: #2b7cff;
    border-color: #2b7cff;
  }

  .members {
    margin: 10px 0 0 0;
    padding-left: 18px;
    font-size: 0.95em;
  }

  .plan-link {
    margin-top: 8px;
    display: inline-block;
    font-size: 0.9em;
  }

  .hidden-radio {
    display: none;
  }

  .submit-area {
    margin-top: 18px;
  }
</style>

<script>
  function selectCouncil(id) {
    document.querySelectorAll(".option-card")
      .forEach(el => el.classList.remove("selected"));

    const card = document.getElementById("card_" + id);
    card.classList.add("selected");

    const radio = document.getElementById("radio_" + id);
    radio.checked = true;

    document.getElementById("confirmBtn").disabled = false;
  }
</script>

<div class="card">
  <h2>Voto 1 de 2: Concejo Directivo</h2>
  <p class="muted">Elige una lista. Luego votarÃ¡s por la lista de fiscales.</p>

  <form method="POST" action="/votar/${token}">
    ${councilLists.map(l => `
      <div class="option-card" id="card_${l.id}" onclick="selectCouncil('${l.id}')">
        <div class="option-title">
          <span>${l.name}</span>
          <span class="check">âœ“</span>
        </div>

        ${l.plan_pdf_path ? `
          <div class="plan-link">
            <a href="${l.plan_pdf_path}" target="_blank">ðŸ“„ Ver plan de trabajo (PDF)</a>
          </div>
        ` : ``}

        <ul class="members">
          ${l.members.map(m => `
            <li>
              <strong>${m.role}</strong>: ${m.full_name}
              ${m.dni_ce ? " (" + m.dni_ce + ")" : ""}
            </li>
          `).join("")}
        </ul>

        <input
          class="hidden-radio"
          type="radio"
          id="radio_${l.id}"
          name="candidate_id"
          value="${l.id}"
          required
        />
      </div>
    `).join("")}

    <div class="submit-area">
      <button id="confirmBtn" class="ok" type="submit" disabled>
        Confirmar voto de Directiva
      </button>
    </div>
  </form>
</div>
` }) %>
