<%- include('layout', { title: "Votar Fiscales", body: `
<style>
  .option-card {
    border: 2px solid #d9d9d9;
    border-radius: 14px;
    padding: 14px 16px;
    margin: 14px 0;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .option-card:hover {
    border-color: #2b7cff;
    background: #f3f8ff;
  }

  .option-card.selected {
    border-color: #2b7cff;
    background: #eaf2ff;
    box-shadow: 0 0 0 3px rgba(43,124,255,0.15);
  }

  .option-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.05em;
    font-weight: 700;
  }

  .check {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 2px solid #bbb;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: white;
    background: transparent;
  }

  .option-card.selected .check {
    background: #2b7cff;
    border-color: #2b7cff;
  }

  .fiscal-info {
    margin-top: 8px;
    font-size: 0.95em;
  }

  .hidden-radio {
    display: none;
  }

  .submit-area {
    margin-top: 18px;
  }
</style>

<script>
  function selectFiscal(id) {
    document.querySelectorAll(".option-card")
      .forEach(el => el.classList.remove("selected"));

    const card = document.getElementById("card_" + id);
    card.classList.add("selected");

    const radio = document.getElementById("radio_" + id);
    radio.checked = true;

    document.getElementById("confirmBtn").disabled = false;
  }
</script>

<div class="card">
  <h2>Voto 2 de 2: Lista de Fiscales</h2>
  <p class="muted">Este es el segundo y último paso.</p>

  <form method="POST" action="/votar/${token}/fiscales">
    ${fiscalLists.map(f => `
      <div class="option-card" id="card_${f.id}" onclick="selectFiscal('${f.id}')">
        <div class="option-title">
          <span>${f.name}</span>
          <span class="check">✓</span>
        </div>

        <div class="fiscal-info muted">
          <div><strong>Titular:</strong> ${f.titular_name}${f.titular_dni ? " (" + f.titular_dni + ")" : ""}</div>
          <div><strong>Suplente:</strong> ${f.suplente_name}${f.suplente_dni ? " (" + f.suplente_dni + ")" : ""}</div>
        </div>

        <input
          class="hidden-radio"
          type="radio"
          id="radio_${f.id}"
          name="fiscal_list_id"
          value="${f.id}"
          required
        />
      </div>
    `).join("")}

    <div class="submit-area">
      <button id="confirmBtn" class="ok" type="submit" disabled>
        Confirmar voto de Fiscales
      </button>
    </div>
  </form>
</div>
` }) %>
